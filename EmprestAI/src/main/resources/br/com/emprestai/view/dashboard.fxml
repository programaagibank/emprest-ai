<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.emprestai.view.DashboardViewController">

    <!-- Top Section: Cartão fixo com apenas o nome do cliente -->
    <top>
        <VBox styleClass="header" spacing="15">
            <!-- Cartão do Cliente - FIXO -->
            <StackPane styleClass="card-container">
                <VBox styleClass="card-header" spacing="10">
                    <HBox alignment="TOP_LEFT">
                        <VBox spacing="5">
                            <Label fx:id="greetingLabel" styleClass="greeting-label" text="Olá, [Nome]!" />
                            <Label styleClass="card-number" text="•••• •••• •••• 1234" />
                        </VBox>
                    </HBox>

                    <!-- Logo Agibank no canto inferior direito -->
                    <HBox alignment="BOTTOM_RIGHT">
                        <Label styleClass="card-brand" text="Agibank" />
                    </HBox>
                </VBox>
            </StackPane>
        </VBox>
    </top>

    <!-- Center Section: Todo o conteúdo com rolagem, incluindo informações de crédito -->
    <center>
        <ScrollPane styleClass="scroll-pane" fitToWidth="true">
            <content>
                <VBox alignment="CENTER" spacing="20.0" styleClass="content">

                    <!-- Ações principais -->
                    <HBox alignment="CENTER" spacing="30.0">
                        <VBox alignment="CENTER" spacing="5.0">
                            <Button fx:id="consignadoButton" onAction="#onConsignadoClick" styleClass="action-button">
                                <graphic>
                                    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/consignado.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Label styleClass="action-label" text="Consignado" />
                        </VBox>
                        <VBox alignment="CENTER" spacing="5.0">
                            <Button fx:id="pessoalButton" onAction="#onPessoalClick" styleClass="action-button">
                                <graphic>
                                    <ImageView fitHeight="40" fitWidth="40" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/pessoal.png" />
                                        </image>
                                    </ImageView>
                                </graphic>
                            </Button>
                            <Label styleClass="action-label" text="Pessoal" />
                        </VBox>
                    </HBox>

                    <!-- Promoções com design melhorado -->
                    <VBox spacing="15.0" styleClass="promo-section">
                        <Label styleClass="section-title" text="Ofertas para Você" />

                        <!-- Informações de crédito - Movidas para a seção de ofertas -->
                        <HBox alignment="CENTER" spacing="20.0" styleClass="credit-breakdown">
                            <VBox alignment="TOP_LEFT" prefWidth="150.0" spacing="4.0">
                                <Label styleClass="credit-label" text="Consignado" />
                                <Label fx:id="consignadoCredit" styleClass="credit-subamount" text="R$ 0,00" />
                                <Label styleClass="credit-subtitle" text="Aposentados, pensionista e servidores" wrapText="true" />
                            </VBox>
                            <VBox alignment="TOP_LEFT" prefWidth="150.0" spacing="4.0">
                                <Label styleClass="credit-label" text="Pessoal" />
                                <Label fx:id="pessoalCredit" styleClass="credit-subamount" text="R$ 0,00" />
                                <Label styleClass="credit-subtitle" text="Para todos os públicos" wrapText="true" />
                            </VBox>
                        </HBox>

                        <HBox spacing="15.0" styleClass="promo-container">
                            <!-- Card de Empréstimo sem imagem -->
                            <VBox styleClass="promo-card" spacing="10.0">
                                <Label styleClass="promo-title" text="Empréstimo com Juros Baixos" wrapText="true" />
                                <Label styleClass="promo-subtitle" text="Aproveite taxas a partir de 1,8%!" wrapText="true" />
                                <Region VBox.vgrow="ALWAYS" /> <!-- Espaçador para alinhar o botão na parte inferior -->
                                <Button styleClass="promo-button" text="Ver oferta" />
                            </VBox>

                            <!-- Card do ChatBot -->
                            <VBox styleClass="promo-card" spacing="10.0">
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <ImageView fitHeight="30" fitWidth="30" preserveRatio="true">
                                        <image>
                                            <Image url="@../images/chatbot.png" />
                                        </image>
                                    </ImageView>
                                    <Label styleClass="promo-title" text="ChatBot" wrapText="true" />
                                </HBox>
                                <Label styleClass="promo-subtitle" text="Fale com nosso assistente" wrapText="true" />
                                <Region VBox.vgrow="ALWAYS" /> <!-- Espaçador para alinhar o botão na parte inferior -->
                                <Button fx:id="chatbotButton" onAction="#onChatBot" styleClass="promo-button" text="Conversar">
                                    <graphic>
                                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                                            <image>
                                                <Image url="@../images/chatbot.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- Próximos pagamentos -->
                    <VBox spacing="15.0" styleClass="upcoming-payments-section">
                        <Label styleClass="section-title" text="Próximos Pagamentos" />
                        <VBox fx:id="upcomingPaymentsBox" spacing="12.0" />
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation -->
    <bottom>
        <HBox alignment="CENTER" spacing="0.0" styleClass="nav-bar">
            <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                        <image>
                            <Image url="@../images/home.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Início</text>
            </Button>
            <Button fx:id="profileButton" onAction="#onProfileClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                        <image>
                            <Image url="@../images/user.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Perfil</text>
            </Button>
            <Button fx:id="exitButton" onAction="#onExitClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                        <image>
                            <Image url="@../images/exit.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Sair</text>
            </Button>
        </HBox>
    </bottom>
</BorderPane>