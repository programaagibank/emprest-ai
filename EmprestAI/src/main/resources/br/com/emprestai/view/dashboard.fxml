<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/dashboard.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.emprestai.view.DashboardViewController">
    <!-- Top Section: Greeting -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" styleClass="header">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label fx:id="greetingLabel" styleClass="greeting-label" text="Empréstimos" />
        </HBox>
    </top>

    <!-- Center Section: Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="content">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="0.0" />
            </padding>

            <!-- Banner Section -->
            <HBox styleClass="banner">
                <VBox alignment="CENTER" spacing="10.0">
                    <Text styleClass="banner-text" text="Crédito Consignado Dinheiro na conta em até 24h!" wrappingWidth="200" />
                    <Button fx:id="hireNowButton" styleClass="banner-button" text="Contratar já!" />
                </VBox>
            </HBox>

            <!-- Total Outstanding Debt -->
            <Label styleClass="section-title" text="Margem Consignado" />
            <Label fx:id="creditMarginConsig" styleClass="amount-label" text="" />

            <!-- Credit Margin -->
            <Label styleClass="section-title" text="Margem Pessoal" />
            <Label fx:id="creditMarginPessoal" styleClass="amount-label" text="" />

            <!-- Loan Options with Icons -->
            <Label styleClass="section-title" text="Escolha de Empréstimo" />
            <HBox alignment="CENTER" spacing="15.0">
                <Button fx:id="consignadoButton" onAction="#onConsignadoClick" styleClass="loan-button">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                            <image>
                                <Image url="@../images/consignado.png" /> <!-- Substitua pelo ícone desejado -->
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Consignado</text>
                </Button>
                <Button fx:id="pessoalButton" onAction="#onPessoalClick" styleClass="loan-button">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                            <image>
                                <Image url="@../images/pessoal.png" /> <!-- Substitua pelo ícone desejado -->
                            </image>
                        </ImageView>
                    </graphic>
                    <text>Pessoal</text>
                </Button>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Section: Navigation Bar -->
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="nav-bar">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/home.png" /> <!-- Substitua pelo ícone desejado -->
                        </image>
                    </ImageView>
                </graphic>
                <text>Início</text>
            </Button>
            <Button fx:id="profileButton" onAction="#onHomeClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" onDragDetected="#onProfileClick" preserveRatio="true">
                        <image>
                            <Image url="@../images/user.png" /> <!-- Substitua pelo ícone desejado -->
                        </image>
                    </ImageView>
                </graphic>
                <text>Perfil</text>
            </Button>
            <Button fx:id="exitButton" onAction="#onExitClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/exit.png" /> <!-- Substitua pelo ícone desejado -->
                        </image>
                    </ImageView>
                </graphic>
                <text>Sair</text>
            </Button>
        </HBox>
    </bottom>
</BorderPane>
