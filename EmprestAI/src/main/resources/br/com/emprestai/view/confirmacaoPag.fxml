<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="confirmacaoContainer" alignment="CENTER" prefWidth="360" prefHeight="640"
      stylesheets="@../css/confirm.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="br.com.emprestai.view.ConfirmacaoPagViewController">
<children>
    <!-- Header -->
    <VBox styleClass="header" prefWidth="360">
        <Label text="Confirmação de Pagamento" styleClass="greeting-label"/>
    </VBox>

    <!-- Conteúdo -->
    <VBox styleClass="content" spacing="15" alignment="CENTER" prefWidth="360" VBox.vgrow="ALWAYS">
        <Label fx:id="valorLabel" styleClass="confirmacao-valor"/>
        <Label fx:id="parcelasLabel" styleClass="confirmacao-parcelas"/>
        <Label fx:id="dataLabel" styleClass="confirmacao-data"/>
        <PasswordField fx:id="senhaField" promptText="Digite sua senha" prefWidth="200"/>
        <Label fx:id="mensagemLabel" styleClass="confirmacao-mensagem" text=""/>
    </VBox>

    <!-- Botões -->
    <HBox styleClass="nav-bar" spacing="20" prefWidth="360">
        <Button fx:id="confirmarButton" text="Confirmar" styleClass="nav-button" onAction="#onConfirmarClick"/>
        <Button fx:id="cancelarButton" text="Cancelar" styleClass="nav-button" onAction="#onCancelarClick"/>
    </HBox>
</children>
</VBox>