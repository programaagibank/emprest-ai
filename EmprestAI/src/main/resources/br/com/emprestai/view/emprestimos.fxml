<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane styleClass="root" stylesheets="@../css/emprestimos.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="br.com.emprestai.view.EmprestimoViewController">
    <!-- Top Section: Header -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" styleClass="header">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label fx:id="contractTitle" styleClass="greeting-label" text="Contrato" />
        </HBox>
    </top>

    <!-- Center Section: Contract Info or Simulate Button -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="content">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <!-- StackPane to toggle between info and button -->
            <StackPane alignment="CENTER">
                <!-- Loan Information -->
                <VBox fx:id="loanInfoBox" spacing="10.0" styleClass="info-box" visible="true" managed="true">
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label fx:id="contractType" styleClass="section-title" text="" />
                        <Label fx:id="totalAmount" styleClass="amount-label" text="" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="info-label" text="Valor Empréstimo:" />
                        <Label fx:id="currentDebt" styleClass="info-value" text="" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="info-label" text="Valor da Parcela:" />
                        <Label fx:id="installmentAmount" styleClass="info-value" text="" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="info-label" text="Parcelas Pagas:" />
                        <Label fx:id="remainingInstallments" styleClass="info-value" text="" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label styleClass="info-label" text="Status:" />
                        <HBox alignment="CENTER" spacing="5.0">
                            <Circle fx:id="statusCircle" radius="5" styleClass="status-circle" />
                            <Label fx:id="loanStatus" styleClass="info-value" text="" />
                        </HBox>
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="ordemVencimentoButton" styleClass="banner-button" text="Ordem de Vencimento" onAction="#onOrdemVencimentoClick"/>
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="maiorDescontoButton" styleClass="banner-button" text="Maior Desconto" onAction="#onMaiorDescontoClick"/>
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="generatePdfButton" styleClass="banner-button" text="Gerar Contrato em PDF" onAction="#onGeneratePdfClick"/>
                    </HBox>
                </VBox>


                <!-- Simulate Loan Button -->
                <Button fx:id="simulateButton" text="Simular Empréstimo" styleClass="banner-button" onAction="#onSimulateClick" visible="false" managed="false"/>
                <!-- Depois (substituindo o botão por um Label) -->
                <Label fx:id="simulationMessage" text="" visible="false" managed="false" style="-fx-font-size: 14px; -fx-text-fill: #333333;" />
            </StackPane>
        </VBox>
    </center>

    <!-- Bottom Section: Navigation Bar -->
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="nav-bar">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/home.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Início</text>
            </Button>
            <Button fx:id="profileButton" onAction="#onProfileClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/user.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Perfil</text>
            </Button>
            <Button fx:id="exitButton" onAction="#onExitClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/exit.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Sair</text>
            </Button>
        </HBox>
    </bottom>
</BorderPane>