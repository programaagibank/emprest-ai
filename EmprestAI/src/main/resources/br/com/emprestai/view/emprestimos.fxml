<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane styleClass="root" stylesheets="@../css/emprestimos.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="br.com.emprestai.view.EmprestimoViewController">
    <!-- Top Section: Gradient Header -->
    <top>
        <VBox prefWidth="380.0" styleClass="header">
            <padding>
                <Insets bottom="20.0" left="15.0" right="15.0" top="40.0" />
            </padding>
            <Label fx:id="contractTitle" styleClass="greeting-label" text="Contrato" />
            <Label fx:id="contractType" styleClass="credit-label" text="" />
        </VBox>
    </top>

    <!-- Center Section: Main Content -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="scroll-pane">
            <content>
                <VBox alignment="CENTER" spacing="15.0" styleClass="content">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>

                    <!-- Solicitação Button and Message -->
                    <VBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="solicitacaoButton" styleClass="action-button" onAction="#onSolicitacaoClick" visible="false" managed="false">
                            <graphic>
                                <ImageView fitHeight="40" fitWidth="40" style="-fx-border-color: red; -fx-border-width: 1;">
                                    <image>
                                        <Image url="@../images/offers.png" />
                                    </image>
                                    <clip>
                                        <Circle radius="20" centerX="20" centerY="20" />
                                    </clip>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Label fx:id="solicitacaoMensagem" text="" styleClass="info-label" visible="false" managed="false" />
                    </VBox>

                    <!-- Loan Information -->
                    <VBox fx:id="loanInfoBox" spacing="10.0" styleClass="upcoming-payments-section" visible="true" managed="true">
                        <!-- Cards de empréstimo serão adicionados dinamicamente pelo controlador -->
                    </VBox>
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <!-- Bottom Navigation - Modernizado -->
    <bottom>
        <StackPane styleClass="nav-bar-container">
            <HBox alignment="CENTER" styleClass="nav-bar" HBox.hgrow="ALWAYS">
                <!-- Make each button container take equal space -->
                <StackPane styleClass="nav-button-container" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                    <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button, nav-button-active">
                        <graphic>
                            <StackPane>
                                <Circle styleClass="nav-button-circle" radius="22" />
                                <StackPane>
                                    <SVGPath styleClass="nav-icon" content="M3,12V19H9V13H15V19H21V12L12,3L3,12Z" />
                                    <Label styleClass="nav-button-label" text="Início" />
                                </StackPane>
                            </StackPane>
                        </graphic>
                    </Button>
                </StackPane>

                <StackPane styleClass="nav-button-container" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                    <Button fx:id="profileButton" onAction="#onProfileClick" styleClass="nav-button">
                        <graphic>
                            <StackPane>
                                <Circle styleClass="nav-button-circle" radius="22" visible="false" />
                                <StackPane>
                                    <SVGPath styleClass="nav-icon" content="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" />
                                    <Label styleClass="nav-button-label" text="Perfil" />
                                </StackPane>
                            </StackPane>
                        </graphic>
                    </Button>
                </StackPane>

                <StackPane styleClass="nav-button-container" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                    <Button fx:id="exitButton" onAction="#onExitClick" styleClass="nav-button">
                        <graphic>
                            <StackPane>
                                <Circle styleClass="nav-button-circle" radius="22" visible="false" />
                                <StackPane>
                                    <SVGPath styleClass="nav-icon" content="M19,3H5C3.89,3 3,3.89 3,5V9H5V5H19V19H5V15H3V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10.08,15.58L11.5,17L16.5,12L11.5,7L10.08,8.41L12.67,11H3V13H12.67L10.08,15.58Z" />
                                    <Label styleClass="nav-button-label" text="Sair" />
                                </StackPane>
                            </StackPane>
                        </graphic>
                    </Button>
                </StackPane>
            </HBox>
        </StackPane>
    </bottom>
</BorderPane>