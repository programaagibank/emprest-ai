<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane styleClass="root" stylesheets="@../css/emprestimos.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="br.com.emprestai.view.ContratarEmprestimoViewController">
    <!-- Top Section: Header -->
    <top>
        <HBox alignment="CENTER" spacing="10.0" styleClass="header">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label fx:id="confirmationTitle" styleClass="greeting-label" text="Confirmar Contratação do Empréstimo" />
        </HBox>
    </top>

    <!-- Center Section: Confirmation Details -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" styleClass="content">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>

            <!-- Loan Type Display -->
            <Label fx:id="loanTypeLabel" styleClass="section-title" text="Tipo: Consignado"/>

            <!-- Loan Information Section -->
            <VBox spacing="10.0" styleClass="loan-info">
                <Label text="Detalhes do Empréstimo" styleClass="section-title"/>
                <Separator/>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
                    </columnConstraints>

                    <Label text="Valor do Empréstimo:" styleClass="info-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="loanAmountLabel" text="R$ 0,00" styleClass="info-value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Quantidade de Parcelas:" styleClass="info-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="installmentsLabel" text="0" styleClass="info-value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Valor da Parcela:" styleClass="info-label" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="installmentValueLabel" text="R$ 0,00" styleClass="info-value" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Taxa de Juros (mensal):" styleClass="info-label" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="interestRateLabel" text="0,00%" styleClass="info-value" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Valor Total:" styleClass="info-label" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="totalAmountLabel" text="R$ 0,00" styleClass="info-value" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Valor de IOF:" styleClass="info-label" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Label fx:id="iofValueLabel" text="R$ 0,00" styleClass="info-value" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Valor do Seguro:" styleClass="info-label" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <Label fx:id="insuranceValueLabel" text="R$ 0,00" styleClass="info-value" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Data de Contratação:" styleClass="info-label" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <Label fx:id="contractDateLabel" text="" styleClass="info-value" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Data de Liberação:" styleClass="info-label" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <Label fx:id="releaseDateLabel" text="" styleClass="info-value" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                    <Label text="Data do 1º Pagamento:" styleClass="info-label" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                    <Label fx:id="firstPaymentDateLabel" text="" styleClass="info-value" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

            <!-- Terms Agreement Section -->
            <VBox spacing="10.0" styleClass="terms-container">
                <Label text="Termos e Condições" styleClass="section-title"/>
                <Separator/>
                <CheckBox fx:id="termsCheckBox" text="Li e concordo com os termos e condições deste empréstimo" styleClass="terms-checkbox"/>
                <CheckBox fx:id="dataCheckBox" text="Confirmo que os dados estão corretos" styleClass="terms-checkbox"/>
            </VBox>

            <!-- Button Container -->
            <HBox spacing="10.0" alignment="CENTER">
                <Button fx:id="confirmButton" text="Confirmar Contratação" styleClass="confirm-button" onAction="#onConfirmClick" disable="true"/>
                <Button fx:id="cancelButton" text="Cancelar" styleClass="secondary-button" onAction="#onCancelClick"/>
            </HBox>
        </VBox>
    </center>

    <!-- Bottom Section: Navigation Bar -->
    <bottom>
        <HBox alignment="CENTER" spacing="20.0" styleClass="nav-bar">
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            <Button fx:id="homeButton" onAction="#onHomeClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <!-- <image>
                            <Image url="@../images/home.png" />
                        </image> -->
                    </ImageView>
                </graphic>
                <text>Início</text>
            </Button>
            <Button fx:id="backButton" onAction="#onBackClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <!-- <image>
                            <Image url="@../images/back.png" />
                        </image> -->
                    </ImageView>
                </graphic>
                <text>Voltar</text>
            </Button>
            <Button fx:id="exitButton" onAction="#onExitClick" styleClass="nav-button">
                <graphic>
                    <ImageView fitHeight="24" fitWidth="24" preserveRatio="true">
                        <image>
                            <Image url="@../images/exit.png" />
                        </image>
                    </ImageView>
                </graphic>
                <text>Sair</text>
            </Button>
        </HBox>
    </bottom>
</BorderPane>